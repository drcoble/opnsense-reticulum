<?xml version="1.0" encoding="UTF-8"?>
<acl>
    <reticulum-settings>
        <name>Reticulum - Settings (Read)</name>
        <patterns>
            <pattern>ui/reticulum/*</pattern>
            <pattern>api/reticulum/settings/get*</pattern>
            <pattern>api/reticulum/settings/search*</pattern>
        </patterns>
    </reticulum-settings>
    <reticulum-settings-edit>
        <name>Reticulum - Settings (Edit)</name>
        <patterns>
            <pattern>api/reticulum/settings/set*</pattern>
            <pattern>api/reticulum/settings/add*</pattern>
            <pattern>api/reticulum/settings/del*</pattern>
            <pattern>api/reticulum/settings/toggle*</pattern>
        </patterns>
    </reticulum-settings-edit>
    <reticulum-service>
        <name>Reticulum - Service Control</name>
        <patterns>
            <pattern>api/reticulum/service/*</pattern>
        </patterns>
    </reticulum-service>
    <reticulum-diagnostics>
        <name>Reticulum - Diagnostics</name>
        <patterns>
            <pattern>api/reticulum/diagnostics/*</pattern>
        </patterns>
    </reticulum-diagnostics>
</acl>
